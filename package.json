{
	"name": "@empatheticbot/polaroid-image-element",
	"version": "0.5.0",
	"description": "Wraps image in polaroid style border and allows for image to be rotated and inline with text appropriately wrapping around the image.",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"clean": "rm -rf dist",
		"lint": "eslint . --ext .js,.ts && tsc --noEmit",
		"prebuild": "npm run clean && npm run lint && mkdir dist",
		"build": "tsc && rollup -c",
		"prepublishOnly": "npm run build",
		"start": "serve . -p 3000",
		"test": "karma start test/karma.config.cjs",
		"update": "npx npm-check -u"
	},
	"repository": {
		"type": "git",
		"url": "git+https://sledsworth@github.com/empatheticbot/polaroid-element.git"
	},
	"keywords": [
		"custom",
		"elements",
		"web",
		"components",
		"html",
		"javascript"
	],
	"author": "Steve Ledsworth",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/empatheticbot/polaroid-element/issues"
	},
	"homepage": "https://github.com/empatheticbot/polaroid-element#readme",
	"devDependencies": {
		"@types/chai": "^4.3.0",
		"@types/mocha": "^9.0.0",
		"chai": "^4.3.4",
		"eslint": "7.32.0",
		"eslint-config-prettier": "8.3.0",
		"eslint-plugin-custom-elements": "0.0.4",
		"eslint-plugin-github": "4.1.5",
		"karma": "^6.3.9",
		"karma-chai": "^0.1.0",
		"karma-chrome-launcher": "^3.1.0",
		"karma-coverage": "^2.1.0",
		"karma-mocha": "^2.0.1",
		"karma-mocha-reporter": "^2.2.5",
		"mocha": "^8.4.0",
		"rollup": "2.62.0",
		"rollup-plugin-node-resolve": "^5.2.0",
		"serve": "13.0.2",
		"ts-node": "10.4.0",
		"typescript": "4.5.4"
	},
	"publishConfig": {
		"access": "public"
	},
	"eslintIgnore": [
		"dist/"
	]
}